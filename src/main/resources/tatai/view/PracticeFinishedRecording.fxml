<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tatai.view.controllers.practiceControllers.FinishedRecordingController">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="TOP_LEFT" text="Speech Recorded">
               <font>
                  <Font name="Noto Sans CJK JP Bold" size="25.0" />
               </font>
            </Label>
            <AnchorPane maxWidth="630.0" prefHeight="100.0">
               <children>
                  <Label fx:id="_message" alignment="TOP_LEFT" text="- To listen to your recording Press the &quot;Play Back&quot; button" textAlignment="CENTER" wrapText="true" AnchorPane.leftAnchor="75.0" AnchorPane.topAnchor="25.0">
                     <font>
                        <Font name="Noto Sans CJK JP Bold" size="15.0" />
                     </font>
                  </Label>
                  <Label text="- To re-record press the record button" AnchorPane.leftAnchor="75.0" AnchorPane.topAnchor="50.0">
                     <font>
                        <Font name="Noto Sans CJK JP Bold" size="15.0" />
                     </font></Label>
                  <Label layoutX="72.0" layoutY="67.0" text="- If you are satisfied with the recording press &quot;Submit&quot;" AnchorPane.leftAnchor="75.0" AnchorPane.topAnchor="75.0">
                     <font>
                        <Font name="Noto Sans CJK JP Bold" size="15.0" />
                     </font>
                  </Label>
                  <Label layoutX="154.0" layoutY="67.0" text="to have the speech checked " AnchorPane.leftAnchor="85.0" AnchorPane.topAnchor="95.0">
                     <font>
                        <Font name="Noto Sans CJK JP Bold" size="15.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </AnchorPane>
            <HBox alignment="CENTER" prefHeight="87.0" prefWidth="600.0" spacing="15.0">
               <children>
                  <JFXButton fx:id="_play" alignment="CENTER" buttonType="RAISED" onAction="#playback" style="-fx-background-color: Lightgrey; -fx-background-radius: 30;" text="Play Back">
                     <font>
                        <Font name="Noto Sans CJK JP Black" size="18.0" />
                     </font>
                  </JFXButton>
                  <JFXButton alignment="CENTER" buttonType="RAISED" onAction="#redo" style="-fx-background-color: Lightgrey; -fx-background-radius: 30;" text="Re-record">
                     <font>
                        <Font name="Noto Sans CJK JP Black" size="18.0" />
                     </font>
                  </JFXButton>
                  <JFXButton alignment="CENTER" buttonType="RAISED" onAction="#submit" style="-fx-background-color: Lightgrey; -fx-background-radius: 30;" text="Submit">
                     <font>
                        <Font name="Noto Sans CJK JP Black" size="18.0" />
                     </font>
                  </JFXButton>
               </children>
            </HBox>
            <JFXButton alignment="CENTER" buttonType="RAISED" onAction="#returnToMainMenu" style="-fx-background-color: Lightgrey; -fx-background-radius: 30;" text="Return to Main Menu">
               <font>
                  <Font name="Noto Sans CJK JP Black" size="18.0" />
               </font>
            </JFXButton>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
   </center>
</BorderPane>
